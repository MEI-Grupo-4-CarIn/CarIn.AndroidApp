<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/splash_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/splash_image"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarIn"
        tools:targetApi="31" >
        <activity
            android:name=".activities.NotificationActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.EditUserActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.InfoUserActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.UserActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.EditVehicleActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.InfoVehicleActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.EditRouteActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.InfoRouteActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.RouteActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.VehicleActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.NewSchedulingActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.NewRouteActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.NewVehicleActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.NewUserActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.InfoActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".activities.RecoverPasswordActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".activities.ConfirmPasswordActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${Google_Maps_API_KEY}"/>
    </application>

</manifest>