<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/backgroundRectangle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/userItemImageView"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_person_blue"
        app:layout_constraintTop_toTopOf="@+id/backgroundRectangle"
        app:layout_constraintStart_toStartOf="@+id/backgroundRectangle"
        app:layout_constraintEnd_toEndOf="@+id/backgroundRectangle"
        app:layout_constraintBottom_toTopOf="@+id/userItemNameTxt"/>

    <TextView
        android:id="@+id/userItemNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bruno Ferreira"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@+id/userItemImageView"
        app:layout_constraintBottom_toTopOf="@+id/userItemEmailTxt"
        app:layout_constraintStart_toStartOf="@id/backgroundRectangle"
        app:layout_constraintEnd_toEndOf="@id/backgroundRectangle" />

    <TextView
        android:id="@+id/userItemEmailTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="bruno.ferreira@carinsdfdsfsf.pt"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/userItemNameTxt"
        app:layout_constraintBottom_toBottomOf="@id/backgroundRectangle"
        app:layout_constraintStart_toStartOf="@id/backgroundRectangle"
        app:layout_constraintEnd_toEndOf="@id/backgroundRectangle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
