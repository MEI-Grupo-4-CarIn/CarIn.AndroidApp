<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.InfoActivity">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_gravity="start"
        app:srcCompat="@drawable/vector_ek4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/informationText"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="54dp"
        android:text="@string/information"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/iconImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/company"
        android:layout_width="151dp"
        android:layout_height="28dp"
        android:layout_marginTop="110dp"
        android:text="@string/the_company"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/informationText"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconAddress"
        android:layout_width="28dp"
        android:layout_height="14dp"
        app:srcCompat="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        app:layout_constraintStart_toEndOf="@+id/iconAddress"
        app:layout_constraintTop_toTopOf="@+id/iconAddress"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/iconPhoneNumber"
        android:layout_width="28dp"
        android:layout_height="14dp"
        app:srcCompat="@drawable/vector_ek1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/PhoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phoneNumber"
        app:layout_constraintStart_toEndOf="@+id/iconPhoneNumber"
        app:layout_constraintTop_toTopOf="@+id/iconPhoneNumber"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/iconemail"
        android:layout_width="28dp"
        android:layout_height="14dp"
        app:srcCompat="@drawable/vector_ek2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        app:layout_constraintStart_toEndOf="@+id/iconemail"
        app:layout_constraintTop_toTopOf="@+id/iconemail"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/iconsite"
        android:layout_width="28dp"
        android:layout_height="14dp"
        app:srcCompat="@drawable/vector_ek3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="215dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/siteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/site"
        app:layout_constraintStart_toEndOf="@+id/iconsite"
        app:layout_constraintTop_toTopOf="@+id/iconsite"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/callCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:text="@string/callcost"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/iconsite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconsite" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="288dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_linkedin_50_1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="288dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_instagram_24_1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="288dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_facebook_novo_50_1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="216dp"
                android:layout_marginTop="288dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icons8_twitter_50_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="330dp"
            android:text="@string/privacyPolicy"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/privacyPolicy"
            android:layout_above="@id/button"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/politicText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/textInfo"
                android:textAlignment="center"
                android:textSize="15dp" />
        </ScrollView>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Copyright Â© 2024 - CarIn"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footer" />

</androidx.constraintlayout.widget.ConstraintLayout>